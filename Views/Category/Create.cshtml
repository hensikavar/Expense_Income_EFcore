@model RKIT.Models.CategoryModel

<h2>@(Model.CategoryId == 0 ? "Create Category" : "Edit Category")</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CategoryId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="">-- Select Type --</option>
            <option value="Income" selected="@Model.Type == " Income"">Income</option>
            <option value="Expense" selected="@Model.Type == " Expense"">Expense</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
