@model IEnumerable<RKIT.Models.IncomeModel>

@{
    ViewData["Title"] = "Income List";
}

<h2>Income List</h2>

<p>
    <a asp-controller="Income" asp-action="Create" class="btn btn-primary">Add New Income</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Amount</td>
                <td>@item.Description</td>
                <td>@item.IncomeDate.ToShortDateString()</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.IncomeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.IncomeId" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
