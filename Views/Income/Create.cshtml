@model RKIT.Models.IncomeModel

@{
    ViewData["Title"] = Model.IncomeId == 0 ? "Create Income" : "Edit Income";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="IncomeId" />

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IncomeDate" class="form-label"></label>
        <input asp-for="IncomeDate" class="form-control" type="date" />
        <span asp-validation-for="IncomeDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
    </div>
</form>
